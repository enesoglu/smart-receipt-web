@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 d-none d-md-block bg-light sidebar min-vh-100 shadow-sm">
            <div class="position-sticky pt-3">
                <h4 class="px-3 mb-4 text-success fw-bold"><i class="bi bi-receipt-cutoff"></i> SmartReceipt</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-success fw-bold bg-white border rounded shadow-sm mx-2 mb-2" href="/">
                            <i class="bi bi-grid-1x2-fill me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-2 mb-2" href="/Receipt/Index">
                            <i class="bi bi-list-ul me-2"></i> All Receipts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-2 mb-2" href="#">
                            <i class="bi bi-bar-chart-line me-2"></i> Reports
                        </a>
                    </li>
                </ul>

                <div class="px-3 mt-4">
                    <button class="btn btn-success w-100 shadow-sm" data-bs-toggle="modal" data-bs-target="#addReceiptModal">
                        <i class="bi bi-plus-lg me-1"></i> Add Receipt
                    </button>
                </div>
            </div>
        </div>

        <main class="col-md-10 ms-sm-auto px-md-4 py-4 bg-light bg-opacity-25">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Overview</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="text-muted">Welcome back! Here's your spending overview.</div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h6 class="text-muted text-uppercase small">Total Monthly Spend</h6>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <h2 class="fw-bold mb-0" id="totalSpendText">0.00 ₺</h2>
                                    <small class="text-muted" id="currentMonthText">...</small>
                                </div>
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-currency-dollar text-success fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h6 class="text-muted text-uppercase small">Total Receipts</h6>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <h2 class="fw-bold mb-0" id="receiptCountText">0</h2>
                                    <small class="text-success fw-bold"><i class="bi bi-arrow-up"></i> Current</small>
                                </div>
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-receipt text-primary fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h6 class="text-muted text-uppercase small">Most Frequent Store</h6>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <h4 class="fw-bold mb-0" id="topStoreText">-</h4>
                                    <small class="text-muted">Top Visited</small>
                                </div>
                                <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-shop text-warning fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">Spending Analysis</h5>
                </div>
                <div class="card-body">
                    <canvas id="spendingChart" height="100"></canvas>
                </div>
            </div>
        </main>
    </div>
</div>

<div class="modal fade" id="addReceiptModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Add New Receipt</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addReceiptForm">
                    <div class="mb-3">
                        <label class="form-label">Store Name</label>
                        <input type="text" class="form-control" id="storeName" placeholder="e.g. Whole Foods Market" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" id="receiptDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Total Amount</label>
                        <input type="number" step="0.01" class="form-control" id="totalAmount" placeholder="0.00" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Receipt Image</label>
                        <input type="file" class="form-control" id="receiptImage">
                        <small class="text-muted">Supports: JPG, PNG</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="saveReceipt()">Save Receipt</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const API_BASE_URL = "https://localhost:5069";

    document.addEventListener("DOMContentLoaded", function () {
        loadDashboardData();
    });

    async function loadDashboardData() {
        try {
            const response = await fetch(`${API_BASE_URL}/api/receipts/dashboard-stats`);

            if (!response.ok) {
                console.error("API Error: Could not fetch data.");
                return;
            }

            const data = await response.json();

            // Fill Cards
            document.getElementById("totalSpendText").innerText = data.totalSpending.toFixed(2) + "₺";
            document.getElementById("receiptCountText").innerText = data.receiptCount;
            document.getElementById("topStoreText").innerText = data.topStore;
            document.getElementById("currentMonthText").innerText = data.currentMonth;

            // Draw Chart
            const ctx = document.getElementById('spendingChart').getContext('2d');

            let gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(25, 135, 84, 0.4)');
            gradient.addColorStop(1, 'rgba(25, 135, 84, 0.0)');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'Weekly Spending',
                        data: [data.totalSpending * 0.2, data.totalSpending * 0.5, data.totalSpending * 0.1, data.totalSpending * 0.2],
                        borderColor: '#198754',
                        backgroundColor: gradient,
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                        x: { grid: { display: false } }
                    }
                }
            });

        } catch (error) {
            console.error("Connection Error:", error);
            document.getElementById("totalSpendText").innerText = "API Error";
            document.getElementById("totalSpendText").classList.add("text-danger", "fs-6");
        }
    }

    async function saveReceipt() {
        const storeName = document.getElementById("storeName").value;
        const date = document.getElementById("receiptDate").value;
        const amount = document.getElementById("totalAmount").value;

        if (!storeName || !date || !amount) {
            alert("Please fill in all required fields!");
            return;
        }

        const newReceipt = {
            storeName: storeName,
            date: date,
            totalAmount: parseFloat(amount),
            imagePath: "default.png"
        };

        try {
            const response = await fetch(`${API_BASE_URL}/api/receipts`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(newReceipt)
            });

            if (response.ok) {
                alert("Receipt added successfully!");
                location.reload();
            } else {
                alert("Error! API did not respond correctly.");
            }
        } catch (error) {
            console.error("Error:", error);
            alert("Connection error! Is the API running?");
        }
    }
</script>